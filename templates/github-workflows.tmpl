name: "deploy of {{.Module}} module"

on:
  push:
    branches:
      - main

env:
  MODULE_NAME: {{.Module}}

jobs:
  build-test:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout Code for Test
        uses: actions/checkout@v4
      
      - name: Build docker image
        run: docker build -t ${{"{{"}}env.MODULE_NAME{{"}}"}}:latest -f ./docker/Dockerfile .
  
      - name: run tests
        run: docker run --rm ${{"{{"}}env.MODULE_NAME{{"}}"}}:latest go test -v

  deploy:
    needs: build-test
    runs-on: ubuntu-latest
    steps:
      - name: 'Run Deploy'
        uses: appleboy/ssh-action@v1.2.2
        with:
          host: ${{"{{"}}secrets.SERVER_HOST{{"}}"}}
          username: ${{"{{"}}secrets.SERVER_USER{{"}}"}}
          key: ${{"{{"}}secrets.SERVER_SSH_KEY{{"}}"}}
          script: |
            cd /var/www/${{"{{"}}env.MODULE_NAME{{"}}"}}
            git pull origin main
            docker build -t ${{"{{"}}env.MODULE_NAME{{"}}"}}:latest -f ./docker/Dockerfile .
            docker stop ${{"{{"}}env.MODULE_NAME{{"}}"}} || true
            docker rm ${{"{{"}}env.MODULE_NAME{{"}}"}} || true
            docker run -d --name ${{"{{"}}env.MODULE_NAME{{"}}"}}-app -p 80:80 ${{"{{"}}env.MODULE_NAME{{"}}"}}:latest
